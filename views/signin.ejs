<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>Signin</title>
  </head>
  <body>
    <%- include('./partials/nav') %>
    <div id="container">
      <form action="/user/signin" method="post" class="w-25 p-3">
        <div class="mb-3">
          <label for="email" class="form-label">Email address</label>
          <input 
          formtarget="email"
          name="email" 
          type="email" 
          class="form-control" 
          id="email"
          autocomplete="email"
          />
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input
            name="password"
            type="password"
            class="form-control"
            id="password"
            autocomplete="current-password"
          />
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
    <%- include('./partials/script') %>
  </body>
</html>
